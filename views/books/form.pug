extends ../base.pug

block content
  h3 #{action} Google Cloud IoT costs
  form(method="POST")
    .form-group
      label(for="title") Title [text]
      input.form-control(type="text", name="title", id="title", value=book.title)
    .form-group
      label(for="messageSize") Message Size [bytes] 
      input.form-control(type="text", name="messageSize", id="messageSize", value=book.messageSize)
    .form-group
      label(for="messageFrequency") Message Frequency [messages / hour] 
      input.form-control(type="text", name="messageFrequency", id="messageFrequency", value=book.messageFrequency)
    .form-group
      label(for="devices") Amount of devices [#]
      input.form-control(type="text", name="devices", id="devices", value=book.devices)
    .form-group
    button.btn.btn-success(type="submit") Calculate costs
